[core]
	compression = 9
	whitespace = error
	preloadindex = true
	pager = diff-so-fancy | less --tabs=4 -RF

[status]
	branch = true
	showStash = true

[commit]
	template = ~/.config/git/template

[diff]
	context = 3
	interHunkContext = 10
	renames = copies

[branch]
	sort = -committerdate

[tag]
	sort = -taggerdate

[interactive]
	diffFilter = diff-so-fancy --patch
	singlekey = true

[pull]
	rebase = true

[log]
	abbrevCommit = true

[rebase]
	missingCommitsCheck = warn

[diff-so-fancy]
	markEmptyLines = false

[color "diff"]
    meta       = black bold
    frag       = magenta
    context    = white
    whitespace = yellow reverse

